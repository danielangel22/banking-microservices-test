<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define la consola como salida -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [TransactionService] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define un archivo como salida -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/transaction-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/transaction-service.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [TransactionService] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ConfiguraciÃ³n del nivel de logs -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
